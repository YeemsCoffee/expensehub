# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=expensehub
DB_USER=your_db_user
DB_PASSWORD=your_secure_password_here

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret - CHANGE THIS! Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_secure_random_secret_here

# JWT Expiration
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration - Azure Communication Services
# Get from Azure Portal > Communication Services > Keys
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-service.communication.azure.com/;accesskey=your_access_key_here
AZURE_SENDER_EMAIL=your-sender@yourdomain.com
EMAIL_ENABLED=true

# Amazon Business Punchout Configuration
# Get from Amazon Business > Integration Settings
AMAZON_PUNCHOUT_IDENTITY=your_amazon_identity_here
AMAZON_PUNCHOUT_SECRET=your_amazon_secret_here
AMAZON_PUNCHOUT_URL=https://abintegrations.amazon.com/punchout
AMAZON_PUNCHOUT_TEST_URL=https://abintegrations.amazon.com/punchout/test
AMAZON_PO_URL=https://your-amazon-po-url-here
AMAZON_PUNCHOUT_USE_PROD=false

# Veryfi OCR Configuration
# Get from Veryfi Dashboard > API Keys (https://hub.veryfi.com/api/settings/keys/)
# Sign up at: https://www.veryfi.com/
VERYFI_CLIENT_ID=your_veryfi_client_id_here
VERYFI_CLIENT_SECRET=your_veryfi_client_secret_here
VERYFI_USERNAME=your_veryfi_username_here
VERYFI_API_KEY=your_veryfi_api_key_here

# Xero Accounting Integration
# Create app at: https://developer.xero.com/app/manage
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here
XERO_REDIRECT_URI=http://localhost:5000/api/xero/callback
